<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        >
        <ImageView
            android:id="@+id/preview_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            />

    </RelativeLayout>


    <com.rey.material.widget.TextView
        style="@style/Material.Widget.EditText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:textColor="#424242"
        app:et_dividerHeight="0dp"
        app:et_supportMode="none"
        android:hint="Size"
        android:textColorHint="#424242"
        android:enabled="false"
        />

    <com.rey.material.widget.Slider
        style="@style/Material.Widget.Slider"
        android:id="@+id/slider_size"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:padding="16dp"
        app:sl_value="128"
        app:sl_maxValue="512"
        app:sl_minValue="32"
        app:sl_stepValue="32"
        />

    <com.rey.material.widget.TextView
        style="@style/Material.Widget.EditText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:textColor="#424242"
        app:et_dividerHeight="0dp"
        app:et_supportMode="none"
        android:hint="Opacity"
        android:textColorHint="#424242"
        android:enabled="false"
        />

    <com.rey.material.widget.Slider
        style="@style/Material.Widget.Slider"
        android:id="@+id/slider_opacity"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:padding="16dp"
        android:gravity="center_horizontal"
        app:sl_stepValue="1"
        app:sl_minValue="0"
        app:sl_maxValue="255"
        />


</LinearLayout>
