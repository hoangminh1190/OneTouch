<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <com.rey.material.widget.ProgressView
            android:id="@+id/progress_pv_circular_inout_colors"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:pv_autostart="true"
            app:pv_circular="true"
            app:pv_progressMode="indeterminate"
            app:pv_progressStyle="@style/InOutColorsCircularProgressDrawableStyle" />

        <com.rey.material.widget.Button
            android:id="@+id/btn_start"
            style="@style/FlatWaveColorButtonRippleStyle"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:text="START"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
            android:textColor="#FF2196F3"
            app:rd_delayClick="afterRelease" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.rey.material.widget.ImageButton
            android:id="@+id/btn_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="openActivity"
            android:src="@drawable/ic_cafe" />

        <com.rey.material.widget.ImageButton
            android:id="@+id/btn_theme"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="openActivity"
            android:src="@drawable/ic_star" />

    </LinearLayout>

</LinearLayout>